load("@bazel_latex//:latex.bzl", "latex_document")

latex_document(
    name = "my_report",
    srcs = glob(["*.tex"]),
    bib_tool = "bibtex",  # Is the default
    format = "pdf",  # Is the default
    main = "example.tex",
)


