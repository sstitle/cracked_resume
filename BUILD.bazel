latex_document(
    name = "my_resume",
    srcs = glob(["resume/cv/*.tex", "resume/fonts/*.ttf"]) + [":texlive_dependencies"],
    bib_tool = "bibtex",
    format = "pdf",
    main = "resume/resume.tex",
